{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "CustomCRMDynamoDbTable": {
      "Type": "AWS::DynamoDB::Table",
      "DeletionPolicy": "Delete",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        },
        "TableName": "custom-crm"
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "my.dev.serverless.deploys",
      "Export": {
        "Name": "sls-custom-crm-tables-dev-ServerlessDeploymentBucketName"
      }
    },
    "CustomCRMTableArn": {
      "Value": {
        "Fn::GetAtt": [
          "CustomCRMDynamoDbTable",
          "Arn"
        ]
      },
      "Export": {
        "Name": "CustomCRMTableArn"
      }
    },
    "CustomCRMTable": {
      "Value": {
        "Ref": "CustomCRMDynamoDbTable"
      },
      "Export": {
        "Name": "CustomCRMDynamoDbTableName"
      }
    }
  }
}